<div class="container text-center mt-3">
    <h1>Tag list</h1>

    <div>
        <table class="table-hover w-100 text-left">
            <thead>
                <th>Name</th>
                <th colspan="3"></th>
            </thead>
            <tbody>
                <% @tags.each do |tag| %>
                    <tr>
                        <td class="tag-name"> <%=tag.name%> </td>  
                        <td><%= link_to 'Show', admin_tag_path(tag), class:"btn btn-sm btn-outline-success" %></td>
                        <td><%= link_to 'Edit', edit_admin_tag_path(tag), class:"btn btn-sm btn-outline-warning" %></td>
                        <td><%= link_to "Delete", admin_tag_path(tag), method: :delete, data:{ confirm: "Are you sure ?"}, class:"btn btn-sm btn-outline-danger" %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>