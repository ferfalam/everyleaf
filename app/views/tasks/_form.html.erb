<%= form_with(model: @task, local: true) do |f| %>
    
    <% if @task.errors.any? %>
        <ul style="color: red">
            <% @task.errors.full_messages.each do |message| %>
                <li> <%=message%> </li>
            <% end %>
        </ul>
    <% end %>
    
    <%= f.label :name, "Name" %> <br>
    <%= f.text_field :name %> <br>
    <%= f.label :details, "Details" %> <br>
    <%= f.text_field :details %> <br>
    <%= f.submit %>
<% end %>