<!DOCTYPE html>
<html>
  <head>
    <title>Everyleaf</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="nav p-3 text-white">
        <div class="nav-logo">DiveIntoCode</div>
        <div class="links ml-3">
          <%= link_to  "New Task", new_task_path, class:"btn btn-md btn-outline-primary mx-2" %>
          <%= link_to  "Task List", tasks_path, class:"btn btn-md btn-outline-primary mx-2" %>
        </div>
    </header>
    <%= yield %>
  </body>
</html>
